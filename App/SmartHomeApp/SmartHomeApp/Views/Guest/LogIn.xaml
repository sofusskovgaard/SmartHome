<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:SmartHomeApp.ViewModels.Guest;assembly=SmartHomeApp"
             x:Class="SmartHomeApp.Views.Guest.LogIn"
             x:DataType="models:LoginViewModel" BackgroundColor="#f6f6f6">
    <ContentPage.Content>
        <StackLayout Padding="16">
            <Label Text="You're not logged in. You must be logged in to use this application."
                   VerticalOptions="EndAndExpand"
                   HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center" Padding="16" />
            <Button VerticalOptions="StartAndExpand"
                    HorizontalOptions="FillAndExpand" Text="Login" Command="{Binding Login}" TextColor="Black" BackgroundColor="White"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>